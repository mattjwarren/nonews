from argtools.validation import process_kwargs

class Record(object):
    def __init__(self,**kwargs):
        process_kwargs(self,
                       #required
                       ["fields",],
                       #defaults
                       None,
                       #keywords
                       kwargs)
        
class Table(object):
    def __init__(self,fields=None):
        self.fields=fields
        
    def create_sql(self):
        pass


    
class Schema(object):
    def __init__(self,tables):
        self.tables=None
    
    def create_sql(self):
        pass
